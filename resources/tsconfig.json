{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ESNEXT",
    "module": "ESNext",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["./js/*"],
      "~": ["./js"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"],
  "moduleResolution": "node",
  "esModuleInterop": true
}
